<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screan_horizontal_border_padding"
    tools:context=".ui.enter.EnterFragment">

    <TextView
        android:id="@+id/dateLabelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/enter_item_margin_top"
        android:text="Дата: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07-02-2019"
        android:layout_marginLeft="@dimen/enter_second_column_margin_left"
        app:layout_constraintBottom_toBottomOf="@id/dateLabelTv"
        app:layout_constraintLeft_toRightOf="@id/dateLabelTv" />

    <View
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp"
        app:layout_constraintBottom_toBottomOf="@id/dateLabelTv"
        app:layout_constraintLeft_toRightOf="@id/dateLabelTv" />

    <ImageView
        android:id="@+id/calendarIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:src="@drawable/icon_calendar"
        app:layout_constraintBottom_toBottomOf="@id/dateTv"
        app:layout_constraintLeft_toRightOf="@id/dateTv"
        app:layout_constraintTop_toTopOf="@id/dateTv" />

    <TextView
        android:id="@+id/mealNumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/enter_item_margin_top"
        android:text="Прием пищи: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateTv" />

    <Spinner
        android:id="@+id/mealNumSp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/mealNumTv"
        app:layout_constraintLeft_toLeftOf="@id/v"
        app:layout_constraintTop_toTopOf="@+id/mealNumTv"
        app:layout_constraintLeft_toRightOf="@id/mealNumTv"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/dishTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/enter_item_margin_top"
        android:text="Блюдо: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mealNumTv" />

    <AutoCompleteTextView
        android:id="@+id/dishActv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:imeOptions="actionNext"
        android:text=""
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/dishTv"
        app:layout_constraintLeft_toLeftOf="@id/dateTv"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/weightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/enter_item_margin_top"
        android:text="Масса: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dishActv" />

    <EditText
        android:id="@+id/weightEd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/weightTv"
        app:layout_constraintLeft_toLeftOf="@id/dateTv" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.736" />
</android.support.constraint.ConstraintLayout>