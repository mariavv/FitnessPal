<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/handbook_food_title" />

    <TextView
        android:id="@+id/protein_tv"
        android:layout_width="@dimen/hb_pf_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/handbook_protein_title" />

    <TextView
        android:id="@+id/fat_tv"
        android:layout_width="@dimen/hb_pf_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/handbook_fat_title" />

    <TextView
        android:id="@+id/carb_tv"
        android:layout_width="@dimen/hb_c_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/handbook_carb_title" />

</LinearLayout>